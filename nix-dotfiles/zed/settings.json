// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "icon_theme": "Warm Charmed Icons",
    "project_panel": {
        "dock": "right"
    },
    "ui_font_size": 15,
    "buffer_font_size": 12,
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "Gruvbox Material"
    },

    "vim_mode": true,
    "relative_line_numbers": true,

    "format_on_save": "off",

    "ui_font_family": "IBM Plex Mono",
    "buffer_font_family": "Pixel Code",
    "tab_size": 4,

    "languages": {
        "Nix": {
            "enable_language_server": true
        },

        "YAML": {
            "tab_size": 2
        },

        "PHP": {
            "enable_language_server": true,
            "language_servers": ["intelephense", "!phpactor"]
        }
    },

    "experimental.theme_overrides": {
        "hint": "#665c54",
        "hint.background": "#252523",
        // "hint.border": null,

        "syntax": {
            "keyword": {
                "color": "#ea6962",
                "font_style": "italic"
            },

            "function": {
                "color": "#a9b665"
            },

            "type": {
                "color": "#7daea3"
            },

            "operator": {
                "color": "#e78a4e"
            },

            "number": {
                "color": "#d3869b"
            },

            "variable": {
                "color": "#d4be98"
            },

            "constructor": {
                "color": "#7daea3"
            },

            "string": {
                "color": "#d8a657"
            },

            "boolean": {
                "color": "#d3869b"
            }
        },
    },

    "inlay_hints": {
        "enabled": true,
        "show_background": true
    }
}
