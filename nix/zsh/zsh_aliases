# sent stuff to xclip via stdin
alias xclipc='xclip -selection clipboard'

# copy with progressbar
alias cp='rsync -Iah --info=progress2'

# cat to bat
alias cat='bat'

# grep to ripgrep
alias grep='rg'

# ls to eza
alias ls='eza'

# rebuild nix
alias update='sudo nixos-rebuild switch'

# download audio shortcut
alias yt-audio='yt-dlp -x --audio-format mp3 --embed-thumbnail -o "%(title)s.%(ext)s" "$1"'

# download video shortcut
alias yt-video='yt-dlp -f bestvideo+bestaudio --merge-output-format mp4 --embed-thumbnail -o "%(title)s.%(ext)s" "$!"'
